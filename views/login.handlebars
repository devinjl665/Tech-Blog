<div class="card flex-column">
    <h2 class="card-header"> Login</h2>
    <form id="login-form" class="card-body">
        <div class="mb-6">
            <label for="username" class="form-label">Username</label>
            <input placeholder="Enter username" type="username" class="form-control" id="login-username">
        </div>

        <div class="mb-6">
            <label for="password" class="form-label">Password</label>
            <input placeholder="Enter password" type="password" class="form-control" id="login-password">
            <div id="passwordHelp" class="form-text">Must be 6 digits long.</div>
        </div>

        <div class="mb-6">
            <a href="/signup">Don't have an account? Signup</a>
        </div>

        <button type="submit" class="btn btn-primary" id="login-btn">Login</button>
    </form>
</div>
<script src="js/login.js"></script>